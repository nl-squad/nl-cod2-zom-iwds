#ifndef WP
#define WP(_tab, _origin, _requirement, _name, _weapon, _ammo) \
		itemDef \
		{ \
			group			"tab_" ## _tab \
			visible			0 \
			rect			-10 0 128 24 0 0 \
			forecolor		GLOBAL_UNFOCUSED_COLOR \
			type			ITEM_TYPE_TEXT \
			textfont		UI_FONT_NORMAL \
			textscale		.25 \
			textstyle		ITEM_TEXTSTYLE_SHADOWED \
			textaligny		20 \
			textalign      	ITEM_ALIGN_RIGHT \
			origin			_origin \
			text			_requirement ## " ^4|" \
		} \
		itemDef \
		{ \
			group			"tab_" ## _tab \
			visible			0 \
			rect			0 0 128 24 0 0 \
			forecolor		GLOBAL_UNFOCUSED_COLOR \
			type			ITEM_TYPE_BUTTON \
			textfont		UI_FONT_NORMAL \
			textscale		.25 \
			textstyle		ITEM_TEXTSTYLE_SHADOWED \
			textaligny		20 \
			textalign      	ITEM_ALIGN_LEFT \
			origin			_origin \
			text			_name \
			action \
			{ \
				play "mouse_click"; \
				scriptMenuResponse _weapon ## "_mp"; \
			} \
			mouseEnter \
			{ \
				setdvar nl_weapon "nl_img_" ## _weapon; \
			} \
			onFocus \
			{ \
				hide ammo_group; \
				show _weapon ## "_ammo"; \
			} \
		} \
		itemDef \
		{ \
			group			"ammo_group" \
			name 			_weapon ## "_ammo" \
			origin			ORIGIN_AMMO \
			text			_ammo \
			textscale		.23 \
		}
#endif

