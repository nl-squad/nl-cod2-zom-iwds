#ifndef COMBAT
#define COMBAT(_origin, _id, _name, _image) \
		itemDef \
		{ \
			style			WINDOW_STYLE_FILLED \
			rect			2 2 78 78 0 0 \
			origin			_origin \
			backcolor		0 0 0 0.6 \
			visible			1 \
			decoration \
		} \
		itemDef \
		{ \
			type			ITEM_TYPE_BUTTON \
			rect			0 0 80 80 0 0 \
			origin			_origin \
			border			1 \
			bordercolor		0.027 0.082 0.604 1 \
			style			WINDOW_STYLE_FILLED \
			visible			1 \
			textscale		.2 \
			textalignx		2 \
			textaligny		76 \
			text			_name \
			mouseEnter \
			{ \
            	scriptMenuResponse "hover_" ## _id; \
				setcolor bordercolor 0.094 0.455 0.804 0.8 \
			} \
			mouseExit \
			{ \
				setcolor bordercolor 0.027 0.082 0.604 1 \
			} \
			action \
			{ \
				play "mouse_click"; \
				scriptMenuResponse _id \
			} \
		} \
		itemDef \
		{ \
			style			WINDOW_STYLE_SHADER \
			rect			5 5 70 70 0 0 \
			origin			_origin \
			background		"nl_kutka" \
			dvartest		"cp" ## _id \
			showDvar		{ "2" } \
			visible			1 \
			decoration \
		} \
		itemDef \
		{ \
			style			WINDOW_STYLE_SHADER \
			rect			5 5 70 70 0 0 \
			origin			_origin \
			background		_image \
			dvartest		"cp" ## _id \
			hideDvar		{ "2" } \
			visible			1 \
			decoration \
		} \
		itemDef \
		{ \
			style			WINDOW_STYLE_FILLED \
			rect			5 5 10 10 0 0 \
			origin			_origin \
			backcolor		0.592 1 1 .9 \
			dvartest		"cp" ## _id \
			showDvar		{ "1" } \
			visible			1 \
			decoration \
		} \
		itemDef \
		{ \
			style			WINDOW_STYLE_SHADER \
			rect			5 5 10 10 0 0 \
			origin			_origin \
			background		"nl_szary_kwadrat" \
			dvartest		"cp" ## _id \
			hideDvar		{ "2" } \
			visible			1 \
			decoration \
		}
#endif

