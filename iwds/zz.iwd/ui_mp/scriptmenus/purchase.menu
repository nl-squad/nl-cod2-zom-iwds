			origin			_origin \
			border			1 \
			bordercolor		0.027 0.082 0.604 1 \
			style			WINDOW_STYLE_FILLED \
			visible			1 \
			textscale		.17 \
			textalignx		2 \
			textaligny		77 \
			text			_text \
			mouseEnter \
			{ \
            	scriptMenuResponse "hover:" ## _action; \
