			} \
			mouseExit \
			{ \
				setcolor bordercolor 0.027 0.082 0.604 1 \
			} \
			action \
			{ \
				play "mouse_click"; \
            	scriptMenuResponse "click:" ## _action; \
			} \
		} \
		itemDef \
		{ \
			name			_tab \
			type			ITEM_TYPE_TEXT \
			rect			77 10 0 0 0 0 \
			origin			_origin \
			forecolor		.976 .624 .22 1 \
			textscale		.17 \
			textalign 		ITEM_ALIGN_RIGHT \
			text			_price \
			visible			1 \
			decoration \
